<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>fc5cdf2b-057d-49a1-87d9-9a8ea8f9a6cb</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Cheminées Henry</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>
  <DisplayName DefaultValue="Odoo CRM"/>
  <Description DefaultValue="Intégration Outlook pour Odoo CRM"/>
  <IconUrl DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/dist/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/dist/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/help"/>
  <AppDomains>
    <AppDomain>https://chemineeshenrylo.github.io</AppDomain>
  </AppDomains>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/dist/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <!-- Bouton Créer un lead -->
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                <!-- Bouton Contacts -->
                <Control xsi:type="Button" id="ContactsButton">
                  <Label resid="ContactsButton.Label"/>
                  <Supertip>
                    <Title resid="ContactsButton.Label"/>
                    <Description resid="ContactsButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Commands.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/dist/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/dist/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/dist/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/dist/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://chemineeshenrylo.github.io/chemcrm/mon-outlook-addin/odoocrm/dist/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Odoo CRM"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Créer un lead/assitance"/>
        <bt:String id="ContactsButton.Label" DefaultValue="Contacts"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Créer un nouveau lead dans Odoo"/>
        <bt:String id="ContactsButton.Tooltip" DefaultValue="Rechercher et gérer les contacts"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
