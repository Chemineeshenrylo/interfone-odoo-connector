{
  "name": "interfone-odoo-connector",
  "version": "1.4.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist-mac": "electron-builder --mac",
    "dist-win": "electron-builder --win"
  },
  "build": {
    "appId": "com.interfone.odoo.connector",
    "productName": "Interfone Odoo Connector",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Chemineeshenrylo",
        "repo": "interfone-odoo-connector"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "identity": "Apple Distribution: Cheminees Henry (K868C9MV7A)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "zip",
          "arch": ["arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Interfone Odoo Connector"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Desktop application for Interfone SIP integration with Odoo CRM",
  "dependencies": {
    "drachtio-srf": "^5.0.13",
    "electron-store": "^11.0.0",
    "electron-updater": "^6.6.2",
    "sip": "^0.0.6",
    "sip.js": "^0.21.2"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1"
  }
}
